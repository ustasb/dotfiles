// coc.nvim options: https://github.com/neoclide/coc.nvim/blob/master/data/schema.json

{
  "coc.preferences.extensionUpdateCheck": "weekly",

  "suggest.timeout": 5000,
  "suggest.autoTrigger": "always",
  "suggest.minTriggerInputLength": 2,
  "suggest.maxCompleteItemCount": 15,
  "suggest.localityBonus": true,
  "workspace.ignoredFiletypes": ["markdown", "log", "txt", "help"],

  // Requires Neovim with floating window support.
  "suggest.floatEnable": true,
  "diagnostic.messageTarget": "float",
  "signature.target": "float",
  "coc.preferences.hoverTarget": "echo",

  "diagnostic.enable": true,
  "diagnostic.checkCurrentLine": false,  // too annoying
  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",

  // Git
  // https://github.com/neoclide/coc-git
  "coc.source.issues.enable": false,
  "git.enableGutters": true,
  "git.realtimeGutters": false,
  "git.changedSign.hlGroup": "GruvboxAquaSign",
  "git.addedSign.hlGroup": "GruvboxGreenSign",
  "git.removedSign.hlGroup": "GruvboxRedSign",
  "git.topRemovedSign.hlGroup": "GruvboxRedSign",
  "git.changeRemovedSign.hlGroup": "GruvboxPurpleSign",

  // Ruby
  // https://github.com/neoclide/coc-solargraph
  "solargraph.completion": true,
  "solargraph.checkGemVersion": false,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.autoformat": false,

  // JavaScript
  // https://github.com/neoclide/coc-tsserver
  // https://github.com/neoclide/coc-eslint
  "tsserver.enable": true,
  "tsserver.enableJavascript": true,
  "tsserver.formatOnType": false,
  "typescript.suggest.enabled": false, // Disable linting in favor of ESLint. (https://github.com/neoclide/coc-tsserver/issues/12)
  "typescript.validate.enable": false, // ^^
  "javascript.suggest.enabled": false, // ^^
  "javascript.validate.enable": false, // ^^
  "eslint.enable": true,
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": false,

  // Python (via Conda)
  // https://github.com/neoclide/coc-python
  "python.pythonPath": "/usr/local/anaconda3/bin/python",
  "python.jediEnabled": true,
  "python.analysis.diagnosticEnabled": true,
  "python.analysis.openFilesOnly": true,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    // "--errors-only",
    "--disable=E1101",  // no-member
    "--disable=C0301",  // line length
    "--disable=C0111" // doc strings
  ],
  "python.linting.pylintUseMinimalCheckers": true,
  "python.workspaceSymbols.enabled": false,
  "python.workspaceSymbols.rebuildOnFileSave": false,
  "python.workspaceSymbols.rebuildOnStart": false,

  // YAML
  "yaml.format.enable": false,
  "yaml.format.singleQuote": true,
  "yaml.format.proseWrap": "never",

  // HTML
  "html.enable": true,
  "html.format.enable": true,

  // misc
  "css.enable": true,
  "css.validate": false,  // Disable linting in favor of Stylelint.
  "json.enable": true,
  "coc.source.dictionary.enable": true,
  "coc.source.tag.enable": true,
  "coc.source.ultisnips.enable": true
}
